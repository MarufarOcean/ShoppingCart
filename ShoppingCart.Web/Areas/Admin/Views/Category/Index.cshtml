@model ShoppingCart.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}


<div class ="container p-4">
    <div class ="row p-3">
        <div class ="col-6">
            <h2 class ="text-primary">List of Categories</h2>
        </div>
        <div class ="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateUpdate" class ="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>
            <th class="text-center">Category Name</th>
            <th class="text-center">Display Order</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.categories) {
        <tr>
            <td class="text-center">@item.Name</td>
            <td class="text-center">@item.DisplayOrder</td>
        
        
                <td>
                    <div class ="w-75 btn-group" role= "group" style="margin-left: 14%">
                        <a asp-controller="Category" asp-action="CreateUpdate" asp-route-id="@item.Id"
                        class ="btn btn-primary mx-2 "> <i class="bi bi-pencil-square"></i>Edit</a> @*Showing Button for Update*@

                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"      
                        class ="btn btn-danger mx-2"> <i class="bi bi-trash"></i>Delete</a>   @*Showing Button for delete*@
                    </div>
                </td>
        </tr>
    }
    </tbody>
</table>

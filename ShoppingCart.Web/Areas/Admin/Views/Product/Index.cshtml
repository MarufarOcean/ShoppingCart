@model ShoppingCart.DataAccess.ViewModels.ProductVM

@{
    ViewData["Title"] = "Index";
}


<div class ="container p-4">
	<div class = "row p-3">
		<div class= col-6> 
			<h2 class ="text-primary text-start">List of Products</h2>
		</div>
		<div class = "col-6 text-end">
			<a class="btn btn-primary text-end" asp-action= "CreateUpdate" asp-controller="Product"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
		</div>
	</div>
</div>

<table id="tblData" class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>Product Name</th>
			<th>Product Description</th>
			<th>Price</th>
			<th>Category</th>
			<th>Action</th>
		</tr>
	</thead>
</table>

@section scripts{
	<script src="~/js/Product.js"></script>
}
@model ShoppingCart.Models.Cart
<h1>Product Details</h1>
<form method ="Post">
	<div class ="row">
		<img src="@Model.Product.ImageUrl" width="200" height="200"/>
		<intput type= "hidden" asp-for="ProductId"/>
	</div>
	<div class = "col-8">
		<div class="row">
			<label asp-for ="Product.Name">Product Name: @Model.Product.Name</label>
			<label asp-for ="Product.Description">Product Description: @Model.Product.Description</label>
			<label asp-for ="Product.Description">Product Price: @Model.Product.Price.ToString("0.00")</label>
			<label asp-for ="Product.CategoryId">Product Category: @Model.Product.Category.Name</label>
			<div class = "form-control">
				<label asp-for="Count"></label>
				<input asp-for="Count" class ="form-control" />
				<span asp-validation-for ="Count" class="text-danger"></span>
			</div>
			<div class="form-control">
				<a  asp-action="Index" asp-controller="Home" class="btn btn-success" >Back to List</a>
				<button type="submit" class="btn btn-dark">Add to Cart</button>
			</div>
		</div>
	</div>
</form>
